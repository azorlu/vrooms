@model Vrooms.WebUI.Models.CartIndexViewModel

@{
    ViewBag.Title = "Reserve Books";
}

<h2>Reserve Books</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.Items)
        {
            <tr>
                <td class="text-left">@item.Book.Title</td>
                <td class="text-left">@item.Book.Author</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="text-center" colspan="2">
                <a class="btn btn-primary" href="@Model.ReturnUrl">Continue</a>
            </td>
        </tr>
    </tfoot>
</table>

